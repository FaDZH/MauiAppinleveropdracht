<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppinleveropdracht.Invitemenu"
             BackgroundColor="#906cba"
             Title="Invitemenu">
    
    <Grid VerticalOptions="Center" HorizontalOptions="Center" Padding="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Image
            Source="qrcode.png"
            Aspect="AspectFit"
            HorizontalOptions="Center"
            VerticalOptions="Center"
            Grid.Row="0"
            HeightRequest="300"
            WidthRequest="300" />

        <HorizontalStackLayout Grid.Row="1" Spacing="20" HorizontalOptions="Center" VerticalOptions="End">

            <Button
                Text="Vrienden"
                HeightRequest="50"
                WidthRequest="150"
                BackgroundColor="#8D4747"
                TextColor="White" />

            <Button
                Text="Copy Link"
                HeightRequest="50"
                WidthRequest="150"
                BackgroundColor="#8D4747"
                TextColor="White" />
        </HorizontalStackLayout>
    </Grid>
    
</ContentPage>